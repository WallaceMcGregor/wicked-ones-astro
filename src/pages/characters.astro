---
import BaseLayout from "../layouts/BaseLayout.astro";
import CharacterCard from "../components/CharacterCard.astro";
import { personajes } from "../data/characters.js";
---

<BaseLayout title="Personajes Jugadores">
  <section class="max-w-5xl mx-auto px-6 py-16">
    <h1 class="text-4xl font-bold text-primary font-serif text-center mb-12">
      Personajes jugadores
    </h1>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-fr">
      {
        personajes.map(personaje => (
        <CharacterCard 
          nombre={personaje.nombre}
          slug={personaje.slug}
          raza={personaje.raza}
          rol={personaje.rol}
          imagen={personaje.imagen}
          detalle={personaje.detalle}
          descripcion={personaje.descripcion}
        />
        ))
      }
    </div>
  </section>
</BaseLayout>
