---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contacto">
  <main class="py-16 px-6 max-w-5xl mx-auto">
    <h1 class="text-3xl font-bold text-center text-primary mb-8 font-serif">Contáctame</h1>
    <form action="#" method="POST" class="w-full space-y-6">
      <!-- Campo: Nombre -->
      <div>
        <label for="nombre" class="block text-sm font-medium text-secondary mb-1">
          Tu nombre
        </label>
        <input
          type="text"
          id="nombre"
          name="nombre"
          required
          class="w-full rounded bg-surface text-background border border-secondary/30 px-4 py-2 focus:outline-none focus:ring focus:ring-primary/40 placeholder-secondary"
          placeholder="Introduce tu nombre"
        />
      </div>

      <!-- Campo: Mensaje -->
      <div>
        <label for="mensaje" class="block text-sm font-medium text-secondary mb-1">
          Tu mensaje
        </label>
        <textarea
          id="mensaje"
          name="mensaje"
          rows="5"
          required
          class="w-full rounded bg-surface text-background border border-secondary/30 px-4 py-2 focus:outline-none focus:ring focus:ring-primary/40 placeholder-secondary"
          placeholder="Escribe tu mensaje aquí..."
        ></textarea>
      </div>

      <!-- Botón de envío -->
      <div class="mt-12 flex justify-center">
        <button
          type="submit"
          class="bg-accent text-background py-3 px-6 rounded shadow hover:scale-105 transition font-semibold"
        >
          Enviar mensaje
        </button>
      </div>
    </form>

  </main>
</BaseLayout>