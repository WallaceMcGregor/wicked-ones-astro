---
const { nombre, descripcion, imagen } = Astro.props;
---

<div class="w-72 min-h-[360px] bg-surface border border-secondary/30 rounded-lg overflow-hidden shadow-lg flex flex-col h-full">
  <img
    src={imagen} 
    alt={nombre} 
    class="w-full h-48 object-cover cursor-pointer" 
    loading="lazy"
    data-lightbox={imagen}
  />

  <div class="p-4 flex flex-col gap-2 flex-grow">
    <h3 class="text-lg font-bold text-primary">{nombre}</h3>
    <p class="text-sm text-secondary">{descripcion}</p>
  </div>
</div>